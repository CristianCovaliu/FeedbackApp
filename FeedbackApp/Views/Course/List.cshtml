@model CourseListViewModel


<h1>@Model.CurrentDescription</h1>
@foreach (var course in Model.Courses)
{
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@course.ImageUrl" alt="" />
        <div class="caption">
            <h3 class="center-block">
                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.CourseId">@course.Title</a>
            </h3>
            <h4>
                <a>@course.Teacher.FirstName @course.Teacher.LastName </a>
            </h4>
            <p>@course.Price.ToString("c")</p>
        </div>
    </div>
</div>
}
