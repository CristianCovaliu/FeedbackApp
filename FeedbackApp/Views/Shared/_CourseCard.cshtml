@model CourseListViewModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="" />
        <div class="caption">
            <h3 class="center-block">
                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId">@Model.Title</a>
            </h3>
            <h4>
                <a>@Model.Teacher.FirstName @Model.Teacher.LastName </a>
            </h4>
            <p>@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>