@model CourseAdminModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
    
    <h2>Are you sure you want to delete this?</h2>
    <h3>@Model.Title</h3>
    <div class="thumbnail">
        @if (Model.ImageName != null)
        {
            <div class="photo-display">
                <img class="photo-display-img" src="@Url.Action("GetImage", "Admin", new { Id = Model.CourseId })" />
            </div>
        }
        <div class="caption-full">
            <h3 class="pull-right">@Model.Price</h3>
            <h3>
                <a href="#">@Model.Teacher.FirstName @Model.Teacher.LastName</a>
            </h3>
            <h4>@Model.ShortDescription</h4>
            <p>@Model.LongDescription</p>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="CourseId" />
            <input type="submit" value="Delete" /> |
            <a asp-action="Index">Back to Courses</a>
        </form>
    </div>
