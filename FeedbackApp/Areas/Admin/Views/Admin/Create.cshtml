@using FeedbackApp.Areas.Admin.Models
@model CourseAdminModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<form method="post" enctype="multipart/form-data" asp-action="Create" class="form-horizontal" role="form">
    <h4>Add new course</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
        </div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select asp-for="TeacherId" asp-items="ViewBag.TeacherId">
                <option selected="selected" value="">Select</option>
            </select>
        </div>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <textarea asp-for="ShortDescription" class="form-control" rows="1"></textarea>
        </div>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <textarea asp-for="LongDescription" class="form-control" rows="2"></textarea>
        </div>
        <span asp-validation-for="LongDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Price" class="form-control" />
        </div>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhotoAvatar" class="col-md-2 control-label"></label>
        <input asp-for="PhotoAvatar" type="file" />
        <span asp-validation-for="PhotoAvatar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
</form>
